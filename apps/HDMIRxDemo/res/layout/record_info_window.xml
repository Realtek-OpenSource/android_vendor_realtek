<?xml version="1.0" encoding="utf-8"?>
<com.example.hdmirxdemo.RecordInfoWindowView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="top|right" >

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView android:id="@+id/info_imageview"
            android:layout_width="wrap_content"
            android:layout_marginRight="15px"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/info_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/focus_red"
            android:textSize="30px" />
    </LinearLayout>

</com.example.hdmirxdemo.RecordInfoWindowView>
