<merge xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Media type -->
	<ImageView
		android:id="@+id/topMediaInfoBg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="34dp"
        android:layout_width="431dp"        
        android:layout_height="50dp"/>        

	<TextView
        android:id="@+id/topMediaInfo"
        android:textColor="@color/white"
        android:textSize="21sp" 
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:layout_marginLeft="154dp"
        android:layout_width="wrap_content"        
        android:layout_height="wrap_content"/>       

	<ImageView
        android:id="@+id/topLoadingIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="41dp"
        android:layout_marginTop="18dp"
        android:layout_width="20dp"        
        android:layout_height="20dp"        
        />

	<LinearLayout 
	    android:id="@+id/ll_above_gv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
	    android:layout_marginTop="66dp"
	    android:layout_marginLeft="0dp"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="33dp"
	    >
		<!-- Path Msg -->    
		<ImageView
		    android:id="@+id/TitleLine0"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:layout_marginTop="30dp"
		    android:layout_marginLeft="0dp"
		    android:layout_width="670dp"        
		    android:layout_height="2dp"        
		    android:src="@color/BWTitleGreen" />
		
		<LinearLayout 
			android:id="@+id/PathLinearLayout"
		    android:orientation="horizontal"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
		    android:layout_marginLeft="0dp"
		    android:layout_width="565dp"
	    	android:layout_height="33dp"
			android:layout_gravity="right"
		    >
			<ImageView
			    android:id="@+id/TitleLine1"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="true"
			    android:layout_marginTop="30dp"
			    android:layout_marginLeft="0dp"
			    android:layout_width="0dp"
			    android:layout_weight="1"	
				android:gravity="right"
			    android:layout_height="2dp"        
			    android:src="@color/BWTitleGreen" />

			<ImageView
			    android:id="@+id/topPathIcon"
			    android:layout_toRightOf="@+id/TitleLine1"
			    android:layout_alignParentTop="true"
			    android:layout_marginTop="0dp"
			    android:layout_marginLeft="0dp"
				android:gravity="right"
			    android:layout_width="38dp"
				android:minWidth="30dp"		
			    android:layout_height="33dp" />		
			
			<TextView
			    android:id="@+id/topPathInfo"
			    android:layout_toRightOf="@+id/topPathIcon"
			    android:layout_alignParentTop="true"
			    android:layout_marginLeft="0dp"
			    android:layout_width="wrap_content"
				android:ellipsize="start"
				android:singleLine="true"
				android:gravity="right|bottom"
			    android:layout_height="fill_parent"
			    android:textColor="@color/BWTitleGreen"
			    android:textSize="@dimen/top_path_info_text_size" />

		</LinearLayout>
	</LinearLayout>
</merge>
