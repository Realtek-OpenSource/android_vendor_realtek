<?xml version="1.0" encoding="utf-8"?>
<com.example.hdmirxdemo.SettingWidgets xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|left">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|left">

    <!-- source type HDMIRx USB camera MediaPlayer -->
    <!-- set label of the CheckBox programmly -->
    <CheckBox
        android:id="@+id/source_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top|left">

        <!-- view type SurfaceView TextureView, no preview -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="top|left">
            <TextView
                android:id="@+id/view_type_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_type"
                android:layout_marginTop="5dp"/>

            <Spinner
                android:id="@+id/view_type_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <!-- window size -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="top|left">
            <TextView
                android:id="@+id/window_size_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/window_size"
                android:layout_marginTop="5dp"/>

            <Spinner
                android:id="@+id/window_size_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- fps checkbox -->
    <CheckBox
        android:id="@+id/fps_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"/>

    <CheckBox
        android:id="@+id/preview_resolution_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"/>

    <!-- record resolution -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="top|left">
        <TextView
            android:id="@+id/rec_resolution_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rec_resolution"
            android:layout_marginTop="5dp"/>

        <Spinner
            android:id="@+id/record_resolution_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <!-- record output path -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="top|left">
        <TextView
            android:id="@+id/rec_output_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rec_output"
            android:layout_marginTop="5dp"/>

        <Spinner
            android:id="@+id/record_output_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top|left">

        <!-- exit behavior -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="top|left">
            <TextView
                android:id="@+id/exit_behavior_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit_behavior"
                android:layout_marginTop="5dp"/>

            <Spinner
                android:id="@+id/exit_behavior_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <!-- record format -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="top|left">
            <TextView
                android:id="@+id/record_format_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rec_format"
                android:layout_marginTop="5dp"/>

            <Spinner
                android:id="@+id/record_format_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <!-- Info text -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:layout_margin="5dp">

        <TextView android:id="@+id/info_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.example.hdmirxdemo.SettingWidgets>
