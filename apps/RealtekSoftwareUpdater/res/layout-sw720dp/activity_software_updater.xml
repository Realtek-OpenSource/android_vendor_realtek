<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg03"
    tools:context=".InitialSettingsActivity" >

	<!-- Title text for listview -->
	<TextView
		android:layout_width="623dp"
		android:layout_height="wrap_content"
   		android:layout_marginTop="80dp"
   		android:layout_marginLeft="329dp"
		android:gravity="center"
		android:text="@string/select_software"
		android:textColor="#57CAD9"
		android:textSize="27sp"
		android:textStyle="bold" />
      
	<!-- Header for listview --> 
	<include layout="@layout/menu_list_header" />

	<!-- Main listview body --> 
   	<ListView
   		android:id="@+id/software_menu"
		android:layout_width="724dp"
		android:layout_height="480dp"
   		android:layout_marginTop="140dp"
   		android:layout_marginLeft="278dp"
		android:scrollbars="none"
   		android:listSelector="@color/transparent"
   		android:divider="@android:color/transparent" />

	<!-- Footer for listview --> 
	<include layout="@layout/menu_list_footer" />
    
</RelativeLayout>
