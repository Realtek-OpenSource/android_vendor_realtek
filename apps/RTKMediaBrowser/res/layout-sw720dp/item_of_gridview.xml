<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="@dimen/gridview_item_width"
    android:layout_height="@dimen/gridview_item_height"
    android:gravity="center"
    >
	<ImageView
        android:id="@+id/focus_img"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_width="@dimen/gridview_item_width"
        android:layout_height="@dimen/gridview_item_height"
        android:focusable="false"
	/>
	<LinearLayout
   		android:layout_width="228dp"	
    	android:layout_height="222dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
	    android:layout_marginTop="8dp"
	    android:layout_marginLeft="10dp"
    	android:gravity="center"
	    android:orientation="vertical">

   		<ImageView
   		    android:layout_alignParentTop="true"
   		    android:id="@+id/grid_img"
   		    android:layout_width="228dp"
   		    android:layout_height="153dp"
   		    android:focusable="false"
   		    android:layout_marginTop="0dp"
   		    android:layout_marginRight="0dp"
   		/>

   		<com.realtek.Utils.MarqueeTextView
   		    android:id="@+id/grid_text"
   		    android:layout_width="fill_parent"
   		    android:layout_height="fill_parent"
   		    android:layout_below="@+id/grid_img"
   		    android:ellipsize="marquee"
   		    android:gravity="center"
   		    android:marqueeRepeatLimit="marquee_forever"
   		    android:singleLine="true"
   		    android:textColor="#10265f"
   		    android:textSize="16sp" >
   		</com.realtek.Utils.MarqueeTextView>
	</LinearLayout>

		
	<ImageView
        android:id="@+id/grid_type_img"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="171dp"
        android:layout_width="66dp"
        android:layout_height="56dp"
        android:focusable="false"
	/>
</RelativeLayout>
