
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_vscroll_normal"
    android:orientation="horizontal"
    >
    
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_vscroll_normal"
        android:alpha="0.9"
        >

        <ImageView
            android:id="@+id/sbs_sub"
            android:src="@drawable/sub_sbs1_side_none"
            android:background="@drawable/selector_transparent"
            android:layout_height="322dp"
            android:layout_width="366dp"
            android:layout_gravity="left" 
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />   

        <TextView
            android:id="@+id/msg"
            android:textColor="@color/video_option_text"
            android:textSize="28sp"
            android:gravity="center"
            android:text="@string/sbs_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_vscroll_normal"
        android:alpha="0.9"
        >

        <ImageView
            android:id="@+id/center_sub"
            android:src="@drawable/sub_center_none"
            android:background="@drawable/selector_transparent"
            android:layout_height="322dp"
            android:layout_width="366dp"
            android:layout_gravity="left" 
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />   

        <TextView
            android:id="@+id/msg"
            android:textColor="@color/video_option_text"
            android:textSize="28sp"
            android:gravity="center"
            android:text="@string/center_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"/>

    </FrameLayout>

</LinearLayout>
