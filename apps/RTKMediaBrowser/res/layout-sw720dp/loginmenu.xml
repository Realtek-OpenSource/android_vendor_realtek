
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <ImageView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:src="@drawable/popup_bg"
      />

    <ImageView
      android:layout_width="76dp"
      android:layout_height="76dp"
      android:layout_marginLeft="566dp"
      android:src="@drawable/popup_login"
      />

    <TextView
      android:id="@+id/LoginTitle"
      android:text="@string/login"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="23dp"
      android:layout_marginLeft="46dp"
      android:textSize="30sp"
      android:textColor="@color/white"
      android:textStyle="bold"
      />

    <ImageView
      android:id="@+id/LoginUser"
      android:layout_width="48dp"
      android:layout_height="58dp"
      android:layout_marginTop="110dp"
      android:layout_marginLeft="50dp"
      android:src="@drawable/account_email_focus"
      />

    <EditText
      android:id="@+id/LoginUserInput"
      android:layout_width="493dp"
      android:layout_height="wrap_content" 
      android:layout_toRightOf="@+id/LoginUser"
      android:layout_alignBottom="@+id/LoginUser"
      android:layout_marginLeft="16dp"
      android:paddingLeft="30dp"
      android:paddingRight="30dp"
      android:singleLine="true"
      android:textSize="21sp"
      android:textColor="#01796f"
      android:background="#cccccc"
      />

    <ImageView
      android:id="@+id/LoginPwd"
      android:layout_width="48dp"
      android:layout_height="58dp"
      android:layout_below="@+id/LoginUser"
      android:layout_marginTop="26dp"
      android:layout_marginLeft="50dp"
      android:src="@drawable/account_password_focus"
      />

    <EditText
      android:id="@+id/LoginPasswdInput"
      android:layout_width="493dp"
      android:layout_height="wrap_content" 
      android:layout_toRightOf="@+id/LoginPwd"
      android:layout_alignBottom="@+id/LoginPwd"
      android:layout_marginLeft="16dp"
      android:paddingLeft="30dp"
      android:paddingRight="30dp"
      android:singleLine="true"
      android:textSize="21sp"
      android:textColor="#01796f"
      android:background="#cccccc"
      android:inputType="textPassword"
      />

    <CheckBox
            android:id="@+id/cbSaveLoginInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="50dp"
            android:textSize="21sp"
            android:textColor="#01796f"
            android:text="@string/remember_login"
            android:layout_below="@id/LoginPwd"
    />
</RelativeLayout>
