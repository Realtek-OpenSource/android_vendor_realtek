
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_vscroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_vscroll"
    android:alpha="0.9"
    android:orientation="vertical"
    android:layout_gravity="center" >

    <TextView
        android:id="@+id/menu_title"
        android:textColor="#ffffffff"
        android:textSize="13sp"
        android:paddingTop="9dp"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:alpha="0.9"
	android:layout_marginTop="62dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/back_hint"
            android:textColor="#ffffffff"
            android:textSize="9sp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/add_hint"
            android:textColor="#ffffffff"
            android:textSize="9sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_string"
        android:alpha="0.9"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sub_back"
            android:src="@drawable/sub_sync_sec_back"
            android:layout_height="27dp"
            android:layout_width="27dp"
            android:layout_alignParentLeft="true"/>

        <ListView
            android:id="@+id/vscroll_list"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:listSelector="@color/transparent"
            android:stackFromBottom ="false"
            android:transcriptMode ="alwaysScroll"
            android:layout_centerInParent="true"
            android:scrollbars="none"
            />

        <ImageView
            android:id="@+id/sub_add"
            android:src="@drawable/sub_sync_sec_add"
            android:layout_height="27dp"
            android:layout_width="27dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>
