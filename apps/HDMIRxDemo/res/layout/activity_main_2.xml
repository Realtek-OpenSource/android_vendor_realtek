<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|left">

    <include android:id="@+id/hdmi_rx_setting_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/setting_widget" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top|left" >

        <Button android:id="@+id/demo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button android:id="@+id/record_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button android:id="@+id/preview_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button android:id="@+id/file_browser_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- record setting button -->
    <CheckBox
        android:id="@+id/schedule_record_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_rec"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"/>

    <!-- schedule time -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/record_start_hour_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule_hour"
            android:layout_marginTop="5dp"/>

        <Spinner
            android:id="@+id/record_start_hour_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/record_start_minute_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule_minute"
            android:layout_marginTop="5dp"/>

        <Spinner
            android:id="@+id/record_start_minute_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</LinearLayout>
