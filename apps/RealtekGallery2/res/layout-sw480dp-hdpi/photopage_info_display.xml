<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/photopage_info_display" >

    <RelativeLayout
        android:id="@+id/slideshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="42dp"
        android:visibility="gone" >

        <TextView android:id="@+id/slideshow_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text="@string/slideshow"
            android:textColor="#86ACBF" />
        <TextView android:id="@+id/slideshow_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/slideshow_tag"
            android:layout_alignBottom="@+id/slideshow_tag"
            android:layout_marginLeft="5dp"
            android:textSize="19sp"
            android:text="@string/setting_off_value"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photopage_info"
        android:layout_width="302dp"
        android:layout_height="54dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:paddingTop="5dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:background="#B5C2C9"
        android:alpha="0.8"
        android:visibility="gone" >

        <TextView android:id="@+id/photopage_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="19sp"
            android:textColor="#11181A" />
        <TextView android:id="@+id/photopage_info_dimension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="#435B63" />
        <TextView android:id="@+id/photopage_info_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="#435B63" />
    </RelativeLayout>

</RelativeLayout>
