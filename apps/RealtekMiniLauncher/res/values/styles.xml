<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Black">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="DHCTheme" parent="android:Theme.Wallpaper">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="THUSelectedText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/ItemSelectedTextColor</item>
    </style>
    <style name="THUUnselectedText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ItemUnselectedTextColor</item>
    </style>
</resources>
